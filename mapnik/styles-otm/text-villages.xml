<Style name="text-villages">
	<Rule>
		<Filter>(([place] = 'village') or ([place] = 'suburb') or ([place] = 'neighbourhood')) and ([population] &gt; 1000)</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="25" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,1)" character-spacing="10" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		<Filter>(([place] = 'village') or ([place] = 'suburb') or ([place] = 'neighbourhood')) and not ([population] &gt; 1000)</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="21" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,1)" character-spacing="10" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		<Filter>([place] = 'hamlet' or [place] = 'isolated_dwelling')</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="18" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		<Filter>([place] = 'locality')</Filter>
		<TextSymbolizer fontset-name="sans-condensed" size="10" fill="black" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point">[name]</TextSymbolizer>
	</Rule>
</Style>
