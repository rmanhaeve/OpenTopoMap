<Style name="text-towns">

	<!-- zoom 11 -->
	<Rule>
		<Filter>([place] = 'town') and ([population] &gt; 50000)</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="40" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point" placement-type="list">[name]
			<Placement dx="6" dy="-5" />
			<Placement dx="7" dy="5" />
			<Placement dy="-8" />
			<Placement dy="7" />
			<Placement dx="-5" dy="6" />
		</TextSymbolizer>
	</Rule>
	<Rule>
		<Filter>([place] = 'town') and ([population] &lt; 50000) and ([population] &gt; 20000)</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="35" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point" placement-type="list">[name]
			<Placement dx="5" dy="-4" />
			<Placement dx="6" dy="4" />
			<Placement dy="-7" />
			<Placement dy="6" />
			<Placement dx="-4" dy="5" />
		</TextSymbolizer>
	</Rule>
	<Rule>
		<Filter>([place] = 'town') and not ([population] &gt; 20000)</Filter>
		<TextSymbolizer fontset-name="sans-condensed-bold" size="30" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" placement="point" placement-type="list">[name]
			<Placement dx="4" dy="-3" />
			<Placement dx="5" dy="3" />
			<Placement dy="-6" />
			<Placement dy="5" />
			<Placement dx="-3" dy="4" />
		</TextSymbolizer>
	</Rule>
</Style>
